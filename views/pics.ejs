<%- include ("partials/header") %> 

<div class="container">

  <div class="jumbotron">
    <h1><i class="fa fa-camera-retro"></i></span>The Image Gallery </h1>
	<p>A bunch of beautiful images that I didn't take(except for the first one!)</p>
		<a class="btn btn-primary btn-large" href="/pics/newPic">Add New Image</a>
    </p>
  </div>

<div class="row text-center" style="display:flex; flex-wrap: wrap;" >
      <% Pic.forEach(function(pics){ %>
          <div class="col-md-4 col-sm-6">
              <div class="thumbnail">
                 <img src="<%= pics.image %>">
				  <div class="caption">
                       <h4><%= pics.Title %></h4>
                   </div>
                   <p>
                       <a href="/pics/<%= pics._id %>" class="btn btn-primary">More Info</a>
                   </p>
              </div>
          </div>
      <% }); %>
  </div>

